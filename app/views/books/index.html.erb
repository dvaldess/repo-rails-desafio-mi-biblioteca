<div class="container">
<%= render 'shared/navbar' %>
<p id="notice"><%= notice %></p>
<h1>La Gran Biblioteca de Isidora</h1>
<table class="table table-dark">
    <thead>
        <tr>
        <th><%= sort_link(@q, :title, 'Titulo') %></th>
        <th>Autor</th>
        <th>Estado</th>
        <th>Fecha de Prestamo</th>
        <th>Fecha de Devoluci√≥n</th>
        <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.borrowing_date %></td>
        <td><%= book.return_date %></td>
        <td><%= link_to 'Ver', book %></td>
        <td><%= link_to 'Editar', book_edit_path(book) %></td>
        <td><%= link_to 'Eliminar', book, method: :delete, data: { confirm: 'Estas Seguro de Eliminar Este Libro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Agregar Nuevo Libro', books_new_path %>
</div>

